@model NewKarma.Models.View.VmAccount.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-12 mx-auto tm-login-col">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12 text-center">
                        <h2 class="tm-block-title mb-4">Welcome to Dashboard, Login</h2>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <form asp-controller="Account" asp-action="Login" class="tm-login-form">
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input asp-for="UserName" type="text" class="form-control validate" id="username" value="" required />
                                <span asp-validation-for="UserName"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label for="password">Password</label>
                                <input asp-for="Password" type="password" class="form-control validate" id="password" required />
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-primary btn-block text-uppercase">
                                    Login
                                </button>
                            </div>
                            <button class="mt-5 btn btn-primary btn-block text-uppercase">
                                Forgot your password?
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>