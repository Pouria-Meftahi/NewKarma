@model NewKarma.Models.View.VmAccount.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-12 mx-auto tm-login-col">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12 text-center">
                        <h2 class="tm-block-title mb-4">Welcome to Dashboard, Login</h2>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <form asp-area="Admin" asp-controller="Account" asp-action="Register" method="post" class="tm-login-form">
                            <div asp-validation-summary="All"></div>
                            <div class="form-group">
                                <label for="username">First Name</label>
                                <input asp-for="FirstName" type="text" class="form-control validate" id="username">
                            </div>
                            <div class="form-group">
                                <label for="lastname">Last Name</label>
                                <input asp-for="LastName" type="text" class="form-control validate" id="lastname">
                            </div>
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input asp-for="UserName" type="text" class="form-control validate" id="username">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input asp-for="Email" type="text" class="form-control validate" id="email">
                            </div>
                            <div class="form-group mt-3">
                                <label for="password">Password</label>
                                <input asp-for="Password" type="password" class="form-control validate" id="password">
                            </div>
                            <div class="form-group mt-3">
                                <label for="passwordConf">Confim Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control validate" id="passwordConf">
                            </div>
                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-primary btn-block text-uppercase">
                                    Register
                                </button>
                            </div>
                            <button class="mt-5 btn btn-primary btn-block text-uppercase">
                                Login
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
