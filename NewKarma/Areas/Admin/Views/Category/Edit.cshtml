@model Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<div class="container-fluid">
    <form asp-area="Admin" asp-controller="Category" asp-action="Edit" method="post" enctype="multipart/form-data" onsubmit="return validationForm()">
        @if (ViewBag.MsgConfirm != null)
        {
            <div class="alert alert-success alert-dismissable">
                @ViewBag.MsgConfirm
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (ViewBag.MsgFailed != null)
        {
            <div class="alert alert-danger alert-dismissable">
                @ViewBag.MsgFailed
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header bg-light">
                                ویرایش آیکن دسته بندی
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="col-md-12 text-center">
                                        <div class="fileinput fileinput-new" data-provides="fileinput">
                                            <div class="fileinput-new thumbnail" style="height: 150px;">
                                                <img src="~/img/imgUpload/Category/@Model.Icon" />
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail" style="height:200px"> </div>
                                            <div>
                                                <span class="btn default btn-file">
                                                    <span class="fileinput-new btn btn-success"> انتخاب کنید </span>
                                                    <span class="fileinput-exists btn btn-default"> تغییر عکس </span>
                                                    <input type="file" name="image" accept=".jpg, .png, .jpeg, .gif, .tif, .tiff, .JPG" />
                                                </span>
                                                <a href="javascript:;" class="btn btn-danger fileinput-exists" data-dismiss="fileinput"> حذف </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-light">
                        ویرایش اطلاعات دسته
                    </div>
                    <div class="card-body">
                        <div class="col-md-12">
                            <div class="row">
                                <input type="hidden" asp-for="CatId" />
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label" >عنوان</label>
                                        <input asp-for="Title" id="title" class="form-control" placeholder="عنوان قطعه">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label"> توضیحات</label>
                                        <textarea asp-for="Description" id="description" rows="5" class="form-control"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light text-right">
                        <button type="submit" class="btn btn-success float-left">ذخیره تغییرات</button>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-info float-right">بازگشت</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<script>
    function validationForm() {
        var titie = $('#title').val();
        var description = $('#description').val();

        if (titie == "") {
            $('#title').focus();
            $.confirm({
                icon: 'fa fa-warning',
                title: 'خطا!',
                content: 'لطفا  عنوان را وارد کنی',
                rtl: true,
                closeIcon: true,
                type: 'red',
                animation: 'opacity',
                theme: 'dark',
                buttons: {
                    confirm: {
                        text: 'تایید',
                        btnClass: 'btn-red',
                    }
                },
            });
            return false;
        }
        
        if (description == "") {
            $('#description').focus();
            $.confirm({
                icon: 'fa fa-warning',
                title: 'خطا!',
                content: 'لطفا  عنوان را وارد کنی',
                rtl: true,
                closeIcon: true,
                type: 'red',
                animation: 'opacity',
                theme: 'dark',
                buttons: {
                    confirm: {
                        text: 'تایید',
                        btnClass: 'btn-red',
                    }
                },
            });
            return false;
        }
        
    }
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
