@model VmProduct
@inject Microsoft.AspNetCore.Identity.UserManager<NewKarma.Areas.Identity.Data.ApplicationUser> _UserManager
@{
    ViewData["Title"] = "ایجاد قطعه";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml"; 
    }


<div class="container-fluid">
    <form asp-area="Admin" asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <input asp-for="UserIdFK" hidden value="@_UserManager.GetUserId(User)" />
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header bg-light">
                                افزودن تصویر قطعه
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="col-md-12 text-center">
                                        <div class="fileinput fileinput-new" data-provides="fileinput">
                                            <div class="fileinput-new thumbnail" style="height: 200px;">
                                                <img src="/img/No_Image_Available.jpg" class="card-img-top" />
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail" style="height:200px"> </div>
                                            <div>
                                                <span class="btn default btn-file">
                                                    <span class="fileinput-new btn btn-success"> انتخاب کنید </span>
                                                    <span class="fileinput-exists btn btn-default"> تغییر عکس </span>
                                                    <input type="file" name="image" accept=".jpg, .png, .jpeg, .gif, .tif, .tiff, .JPG" />
                                                </span>
                                                <a href="javascript:;" class="btn btn-danger fileinput-exists" data-dismiss="fileinput"> حذف </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                  
                </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-light">
                        افزودن اطلاعات قطعه
                    </div>
                    <div class="card-body">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label" asp-for="Title"></label>
                                        <input asp-for="Title" class="form-control" placeholder="عنوان قطعه">
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="BrandIDFK" class="form-control-label"></label>
                                        <select asp-for="BrandIDFK" asp-items="ViewBag.BrandId" class="select2 js-states form-control">
                                            <option value="">انتخاب کنید</option>
                                        </select>
                                        <span asp-validation-for="BrandIDFK" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                         
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CatIDFK" class="form-control-label"></label>
                                        <select asp-for="CatIDFK" asp-items="ViewBag.CatId" class="select2 js-states form-control">
                                            <option value="">انتخاب کنید</option>
                                        </select>
                                        <span asp-validation-for="CatIDFK" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CarIDFK" class="form-control-label"></label>
                                        <select asp-for="CarIDFK" asp-items="ViewBag.CarId" class="select2 js-states form-control" multiple="multiple">
                                            <option value="">انتخاب کنید</option>
                                        </select>
                                        <span asp-validation-for="CarIDFK" class="text-danger"></span>
                                    </div>
                                </div>


                            </div>
                            <div class="row">
                                @*<div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CarModelIDFK" class="form-control-label"></label>
                                        <select asp-for="CarModelIDFK" asp-items="ViewBag.CarModelId" class="select2 js-states form-control" multiple="multiple">
                                            <option value="">انتخاب کنید</option>
                                        </select>
                                        <span asp-validation-for="CarModelIDFK" class="text-danger"></span>
                                    </div>
                                </div>*@
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Description" class="form-control-label"> </label>
                                        <textarea asp-for="Description" class="form-control"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="checkbox" asp-for="Situation" class="ml-1" />
                                        <label asp-for="Situation" class="form-control-label"> </label>
                                    </div>
                                </div>
                       
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light text-right">
                        <button type="submit" class="btn btn-success float-left">ذخیره اطلاعات</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


